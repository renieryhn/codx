Imports prjDatos
Public Class wfmRequisitosSubServicios_Edit
    Inherits System.Web.UI.Page
    Private Funciones As New funciones
    Private dtDatos As New DataTable
    Private sMensaje As String = ""
    Private Const spNombre As String = "pRequisitosSubServicios_Edit"
    Private Const spListNombre As String = "pRequisitosSubServicios_List"

#Region "Eventos"

    Protected Sub Page_Load(ByVal sender As Object, ByVal e As System.EventArgs) Handles Me.Load
        AddHandler Master.Aceptar_Click, AddressOf btnAceptar_Click
        AddHandler Master.Cancelar_Click, AddressOf Redirect
        AddHandler Master.Aplicar_Click, AddressOf btnAplicar_Click
        If Not IsPostBack Then
            CargarValores()
        End If
    End Sub
    Protected Sub btnAceptar_Click(ByVal sender As Object, ByVal e As EventArgs)
        If bModificar() Then
            Redirect()
        Else
            Mensaje(sMensaje)
        End If
    End Sub
    Protected Sub btnAplicar_Click(ByVal sender As Object, ByVal e As EventArgs)
        If bModificar() Then
            RedirectSelf()
        Else
            Mensaje(sMensaje)
        End If
    End Sub
#End Region
#Region "Metodos"
    Private Sub CargarValores()
        Try
            If Session("IdSubServicio") <> "" Then
                txtidSubServicio.Text = Session("IdSubServicio")
                txtidRequisito.Text = Session("IdRequisito")
                dtDatos = Funciones.Filldatatable(spListNombre, dtParametrosBusqueda)
                cboSubServicios.Value = dtDatos.Rows(0).Item(cboSubServicios.FieldName)
                cboRequisitos.Value = dtDatos.Rows(0).Item(cboRequisitos.FieldName)
                chkActivo.Checked = dtDatos.Rows(0).Item("Activo")
            End If
        Catch ex As Exception

        End Try
    End Sub

    Private Function bModificar() As Boolean
        Dim Ok As Boolean
        Ok = Funciones.Ejecutar(spNombre, dtParametros, sMensaje)
        Session("Mensaje") = sMensaje
        Return Ok
    End Function

    Private Sub Redirect()
        Response.Redirect(linkMain.NavigateUrl)
    End Sub

    Private Sub RedirectSelf()
        Response.Redirect(linkMe.NavigateUrl)
    End Sub

    Public Function dtParametrosBusqueda(Optional ByVal bInactivo As Boolean = False) As DataTable
        Try
            dtParametrosBusqueda = Funciones.dtDatos.Clone
            dtParametrosBusqueda.Rows.Add(txtidSubServicio.FieldName, txtidSubServicio.Text)
            dtParametrosBusqueda.Rows.Add(txtidRequisito.FieldName, txtidRequisito.Text)
        Catch ex As Exception
            Throw (ex)
        End Try
    End Function

    Public Function dtParametros(Optional ByVal bInactivo As Boolean = False) As DataTable
        Try
            dtParametros = Funciones.dtDatos.Clone
            dtParametros.Rows.Add("IdSubServiciob", txtidSubServicio.Text)
            dtParametros.Rows.Add("IdRequisitob", txtidRequisito.Text)
            dtParametros.Rows.Add(cboSubServicios.FieldName, cboSubServicios.Value)
            dtParametros.Rows.Add(cboRequisitos.FieldName, cboRequisitos.Value)
            dtParametros.Rows.Add("Activo", chkActivo.Checked)
            dtParametros.Rows.Add("idUsuario", Master.Master.Usuario)
            If Session("Mensaje") = "Error" Then
                ' Return Nothing
            End If
        Catch ex As Exception

        End Try
    End Function
    Public Sub Mensaje(ByVal sMensaje As String)
        Dim strScript As String = "<script language=JavaScript>"
        strScript += "alert(""" & sMensaje & """);"
        strScript += "</script>"
        If (Not ClientScript.IsStartupScriptRegistered("clientScript")) Then
            ClientScript.RegisterClientScriptBlock(Me.GetType(), "clientScript", strScript)
        End If
    End Sub
#End Region

End Class